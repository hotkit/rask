use-project fost-internet : ../fost-internet/ ;
use-project fost-orm : ../fost-orm/ ;
use-project fost-rask : ../fost-rask/ ;

fost-project rask
    :
        <include>../fost-internet/Cpp/include
        <include>../fost-orm/Cpp/include
        <include>../fost-rask/include
        <include>include
    ;

alias examples :
        ../fost-rask//examples
        ../fsnotify//examples
    ;
explicit examples ;

alias fost :
        ../fost-base//fost
        ../fost-internet//fost
        ../fost-orm//fost
    ;
explicit fost ;

alias rask  :
        ../fost-rask
        etc/
        src/rask
        var/
    ;

alias all :
        fost
        rask
    ;
explicit all ;
